@PACKAGE_INIT@

include(CMakeFindDependencyMacro)
include("${CMAKE_CURRENT_LIST_DIR}/S3GFTargets.cmake")

find_dependency(SDL3 REQUIRED)
find_dependency(SDL3_image REQUIRED)
find_dependency(SDL3_mixer REQUIRED)
find_dependency(SDL3_ttf REQUIRED)

set(S3GF_VERSION "@PROJECT_VERSION@")

set(S3GF_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(S3GF_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(S3GF_VERSION_PATCH @PROJECT_VERSION_PATCH@)

get_target_property(S3GF_INCLUDE_DIRS S3GF::S3GF INTERFACE_INCLUDE_DIRECTORIES)

function(target_link_s3gf target)
    target_link_libraries(${target} PRIVATE S3GF::S3GF)
    target_include_directories(${target} PRIVATE ${S3GF_INCLUDE_DIRS})
endfunction()